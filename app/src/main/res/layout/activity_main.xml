<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:textAlignment="center"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView android:text="@string/hello_world"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please use your camera to capture a flower or find a photo from your library."
        android:id="@+id/textView" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open your Camera"
        android:id="@+id/button"
        android:onClick="openCamera"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open your photo library"
        android:id="@+id/button2"
        android:onClick="openFile"/>
    <ImageView
        android:id="@+id/photo"
        android:contentDescription="photo will be placed here"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>